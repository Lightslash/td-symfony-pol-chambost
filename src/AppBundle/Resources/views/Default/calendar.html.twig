{% extends 'AppBundle::layout.html.twig' %}

{% block menu_calendar %}active{% endblock %}

{% block contents %}
    <section>
    	<div class="container">

    		<h3>Calendrier des sorties</h3>

            <ul>
                {% for episode in episodes %}
                    <li>
                        {{ episode.season.show.name }} S{{ episode.season.number }} E{{ episode.number }} : {{ episode.name }} - {{ episode.date|date('d/m/Y') }}
                    </li>
                {% endfor %}
            </ul>
            
    	</div>
    </section>
{% endblock %}